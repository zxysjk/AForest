                    <!--android:layout_centerHorizontal="true"-->
                    <!--android:layout_marginTop="35dp"-->
                    <!--android:src="@drawable/nor1" />-->

            <!--</RelativeLayout>-->
        </LinearLayout>
    </ScrollView>
</LinearLayout>
